@model GestionStock.Models.Models.ClientModel;

@{
    ViewData["Title"] = "Détails de client";
    ViewData["fonction"] = Model.utilisateur.fonction;
    ViewData["UserId"] = Model.utilisateur.id;
    String fullName = Model.utilisateur.nom.ToString() + " " + Model.utilisateur.prenom.ToString();
    ViewData["nom"] = fullName;

}
<div class="callout callout-info">

    <h4>@Model.client.Nom @Model.client.prenom</h4>


    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Id de client :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.client.id)
            </dd>
            <dt class="col-sm-2">
                Nom :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.client.Nom)
            </dd>
            <dt class="col-sm-2">
                Prénom :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.client.prenom)
            </dd>
            <dt class="col-sm-2">
                Adresse :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.client.adresse)
            </dd>
            <dt class="col-sm-2">
                Téléphone :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.client.telephone)
            </dd>
        </dl>
    </div>


</div>

