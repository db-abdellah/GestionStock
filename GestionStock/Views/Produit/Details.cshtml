@model GestionStock.Models.Models.ProduitModel;

@{
    ViewData["Title"] = "Détails de Produits";
    ViewData["UserId"] = Model.utilisateur.id;
    ViewData["fonction"] = Model.utilisateur.fonction;
    String fullName = Model.utilisateur.nom.ToString() + " " + Model.utilisateur.prenom.ToString();
    ViewData["nom"] = fullName;

    String imagePath = "/images/Produits/" + Model.produit.id + ".jpeg";
}

    <div class="card card-primary card-outline">
        <div class="card-body box-profile">
            <div class="text-center">
                <img class="profile-user-img img-fluid img-circle" src="@imagePath" style="width:100px;height:100px;object-fit:contain" onerror="this.src='/images/error.png' ">
            </div>

            <h3 class="profile-username text-center">@Html.DisplayFor(model => model.produit.nom)</h3>

            <p class="text-muted text-center">@Html.DisplayFor(model => model.produit.categorie)</p>

            <ul class="list-group list-group-unbordered mb-3">
                <li class="list-group-item">
                    <b>Id de produit :</b> <a class="float-right"> @Html.DisplayFor(model => model.produit.id)</a>
                </li>
                <li class="list-group-item">
                    <b>Nom :</b> <a class="float-right">@Html.DisplayFor(model => model.produit.nom)</a>
                </li>
                <li class="list-group-item">
                    <b> Catégorie :</b> <a class="float-right">@Html.DisplayFor(model => model.produit.categorie)</a>
                </li>
                <li class="list-group-item">
                    <b>Group :</b> <a class="float-right">@Html.DisplayFor(model => model.produit.groupProduit)</a>
                </li>
                <li class="list-group-item">
                    <b>Prix d'achat :</b> <a class="float-right">@Html.DisplayFor(model => model.produit.prixAchat) DH</a>
                </li>
            </ul>

            <a asp-controller="Produit" asp-action="Index"  class="btn btn-primary btn-block"><b>List des produit</b></a>
        </div>
       
    </div>




