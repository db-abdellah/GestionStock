@model GestionStock.Models.Models.AchatProduitModel;

@{
    Layout = "";
}
@{
    String rowId = "row" + Model.produit.id;
    String totalId = "total" + Model.produit.id;
    String qteId = "qte" + Model.produit.id;
    String prixId = "prix" + Model.produit.id;

}





<tr id="@rowId " class="ItemRow">
    <td hidden class="idProduit">@Model.produit.id</td>


    <td>
        <label> @Model.produit.nom</label>
    </td>
    <td>
        <input class="form-control qte text-center" type="number" min="0" max="@Model.stock.qteEstimee" name="Qte" value="0" id="@qteId" onfocus="calcule(@Model.produit.id)" onclick="calcule(@Model.produit.id);"  onKeyDown="return false"/>
    </td>
    <td>
        <input type="number"  class="form-control text-center" value="0" min="0" onfocus="calcule(@Model.produit.id)" onclick="calcule(@Model.produit.id);" onKeyDown="return false" id="@prixId" /> 
    </td>
    <td>
        <span id="@totalId" class="total">0.00 </span><span>DH</span>
    </td>
    <td>
        <button id="@Model.produit.id" class="btn btn-danger" onclick="deleteRow(this)">supprimer</button>
    </td>
</tr>
